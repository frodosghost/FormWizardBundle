{% block navigation %}
{% spaceless %}
<header class="pure-g-r wizard">
    {% for step in wizard.all %}
    <div class="pure-u">
        {% if step.completed %}
        <a class="step completed" href="{{ path(step.route) }}">
            <span class="title">{{ step.title }}</span>
        </a>
        {% else %}
        <span class="step">
            <span class="title">{{ step.title }}</span>
        </span>
        {% endif %}
    </div>
    {% endfor %}
</header>
{% endspaceless %}
{% endblock %}
